#!/usr/bin/env bash

DEP="
-I lib/gl3w/include lib/gl3w/src/gl3w.c \
-I lib/glfw/include -L lib/glfw/src -lglfw3 \
-lGL -lX11 -lpthread -ldl -lm
"

mkdir -p out

g++ -fPIC src/*.cc -Wall -O0 \
-I include \
-I lib/gl3w/include \
lib/gl3w/src/gl3w.c \
-I lib/glfw/include \
-L lib/glfw/src \
-lglfw3 \
-lGL \
-lX11 \
-lpthread -ldl -lm \
-shared -o out/libburner.so
